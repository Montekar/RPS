<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rps.gui.controller.StartController">
   <center>
      <VBox alignment="CENTER" prefHeight="412.0" prefWidth="623.0" spacing="5.0" styleClass="background" stylesheets="@../CSS/menu.css">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="box" stylesheets="@../CSS/rockpaperscissors.css">
               <children>
                  <Label stylesheets="@../CSS/rockpaperscissors.css" text="ROCK-PAPER-SCISSORS">
                     <font>
                        <Font size="52.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="219.0" prefWidth="593.0" spacing="15.0" styleClass="box" stylesheets="@../CSS/rockpaperscissors.css">
               <children>
                  <Label stylesheets="@../CSS/rockpaperscissors.css" text="Choose Your Name:">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <font>
                        <Font size="33.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldName" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="321.0" styleClass="textfield" stylesheets="@../CSS/rockpaperscissors.css" />
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#startGame" prefHeight="33.0" prefWidth="200.0" stylesheets="@../CSS/rockpaperscissors.css" text="PLAY" />
                        <Button mnemonicParsing="false" onAction="#onClickGenerate" prefHeight="33.0" prefWidth="100.0" stylesheets="@../CSS/rockpaperscissors.css" text="Generate" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
