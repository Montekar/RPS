<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rps.gui.controller.StartController">
   <center>
      <VBox alignment="CENTER" prefHeight="412.0" prefWidth="623.0" spacing="5.0" styleClass="bodybg" stylesheets="@../CSS/StartBG.css">
         <children>
            <VBox alignment="CENTER" style="-fx-background-color: black; -fx-border-color: #FFAE42; -fx-border-width: 6;">
               <children>
                  <Label stylesheets="@../CSS/rockpaperscissors.css" text="Enter your name:">
                     <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                     </VBox.margin>
                  </Label>
                  <TextField maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="201.0" styleClass="textfield" stylesheets="@../CSS/rockpaperscissors.css" />
                  <Button mnemonicParsing="false" onAction="#startGame" prefHeight="0.0" prefWidth="95.0" text="Start">
                     <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                     </VBox.margin>
                     <stylesheets>
                        <URL value="@../CSS/button.css" />
                        <URL value="@../CSS/rockpaperscissors.css" />
                     </stylesheets>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
